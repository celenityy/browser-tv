{
  "manifest_version": 2,
  "name": "tvbro-generic",
  "version": "1.0",
  "description": "TV Bro Generic Addon",
  "browser_specific_settings": {
    "gecko": {
      "id": "tvbro@mock.com"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": [
        "https://tvbro.phlox.dev/appcontent/home/*",
        "*://*/appcontent/home/*"
      ],
      "js": [
        "home.js"
      ],
      "run_at": "document_start"
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "nativeMessaging",
    "nativeMessagingFromContent",
    "geckoViewAddons",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "host_permissions": [
    "*://*/*"
  ]
}
