{
  "manifest_version": 2,
  "name": "browsertv-generic",
  "version": "1.0",
  "description": "Browser TV Generic Addon",
  "browser_specific_settings": {
    "gecko": {
      "id": "browsertv-generic@celenity.dev"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "generic.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "file:///data/user/0/dev.celenity.browser.tv/files/home_page/index.html"
      ],
      "js": [
        "home.js"
      ],
      "run_at": "document_start"
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "nativeMessaging",
    "nativeMessagingFromContent",
    "geckoViewAddons",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ]
}
